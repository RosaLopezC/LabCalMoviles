<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#000000">

    <!-- Fila 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />
    </LinearLayout>

    <!-- Fila 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />
    </LinearLayout>

    <!-- Fila 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />
    </LinearLayout>

    <!-- Fila 4 (BotÃ³n centrado) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_border"
            android:text="|"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Fila 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="&lt;-"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="|"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="->"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_border" />
    </LinearLayout>

</LinearLayout>
